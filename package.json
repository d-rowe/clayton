{
  "name": "piano-core",
  "version": "0.4.2",
  "description": "Boilerplate for TypeScript projects (Node.js and browser modules)",
  "author": "Daniel Rowe",
  "repository": "https://github.com/d-rowe/piano-core",
  "main": "./dist/index.js",
  "types": "./dist/tsc/main.d.ts",
  "scripts": {
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "clean": "rm -rf node_modules",
    "build:common": "esbuild src/index.ts --bundle --minify --outfile=dist/index.js",
    "build:types": "tsc --emitDeclarationOnly --declaration --project tsconfig.json",
    "build:demo": "esbuild src/demo.ts --bundle --minify --sourcemap=external --outfile=dist/demo.js",
    "build": "npm run build:common && npm run build:types",
    "dev": "esbuild src/demo.ts --bundle --sourcemap=inline --watch --outfile=dist/demo.js"
  },
  "devDependencies": {
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "esbuild": "^0.11.11",
    "eslint": "^7.22.0",
    "typescript": "^4.2.3"
  }
}
